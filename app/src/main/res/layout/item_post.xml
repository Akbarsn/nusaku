<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/wayang"/>
        <LinearLayout
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_post_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="Batik Pekalongan"/>
            <TextView
                android:id="@+id/tv_location"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:text="Surakarta, Jawa Tengah"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_clock"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:text="07/12/2020"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_orange" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Kurniawan H."/>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>